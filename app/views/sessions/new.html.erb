<%= link_to "Sign Up", new_user_url %>

<h2>Sign In</h2>
<%= flash[:errors].join("<br>").html_safe if flash[:errors] %>

<form action="<%= session_url %>" method="post">
  <%= auth_token_input %>

  <label>
    Username
    <input type="text" name="user[username]" value="">
  </label>

  <label>
    Password
    <input type="password" name="user[password]" value="">
  </label>

  <input type="submit" value="Sign In">
</form>

<form action="<%= session_url %>" method="post">
  <%= auth_token_input %>

  <label>
    Username
    <input type="hidden" name="user[username]" value="composerinteralia">
  </label>

  <label>
    Password
    <input type="hidden" name="user[password]" value="password">
  </label>

  <input type="submit" value="Guest">
</form>
